@model Taskit.Web.Models.Card

@using (Html.BeginForm("Edit", "Cards", FormMethod.Post, new { @class = "modal-form" }))
{
    @Html.ValidationSummary(true)

    <div class="modalInnerBody">
        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Name, new { @class="input-block-level" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description, new { @class="input-block-level" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>
    </div>
    
}

